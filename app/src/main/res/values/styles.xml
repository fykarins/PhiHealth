<resources>

    <!-- Base app theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Style untuk inputan form -->
    <style name="FormInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_round</item> <!-- Pastikan bg_round.xml ada -->
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style untuk tombol seperti Register -->
    <style name="FormButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_bg</item> <!-- Pastikan button_bg.xml ada -->
    </style>

</resources>
